<?xml version="1.0"?>
<openerp>
    <data noupdate="0">

        <record id="product_paid" model="product.product">
            <field name="name">Paid Amount</field>
            <field name="sale_ok" eval="True"/>
            <field name="available_in_pos" eval="True"/>
