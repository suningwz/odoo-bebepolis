<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_simple_label" inherit_id="product.report_simple_label">
            <xpath expr="//div" position="attributes">
                <attribute name="style">width: 25.4mm; display: inline-table; height:48.5mm;</attribute>
            </xpath>
            <xpath expr="//span[@t-field='product.barcode']" position="attributes">
                <attribute name="style">font-size: 0.7em;</attribute>
            </xpath>
        </template>
    </data>
</odoo>